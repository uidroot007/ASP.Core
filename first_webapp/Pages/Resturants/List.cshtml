@page
@model ListModel
@{
}

<h1>Resturants</h1>
<form  method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>"
            </span>
        </div>

    </div>
</form>
<table class="table">
    <tr>
        <th>Name of the Resturant</th>
        <th>Name of the Cusinie</th>
        <th>Location of the Resturant</th>
    </tr>
    @foreach (var resturant in Model.Resturants)
    { 
       <tr>
            <td>@resturant.Name</td>
            <td>@resturant.Cusinie</td>
            <td>@resturant.Location</td>
           <td>
               <a class="btn btn-lg"
                 asp-page="./Detail" asp-route-resturantId="@resturant.Id"
               >
                   <i class="glyphicon glyphicon-zoom-in"></i>
               </a>"
           </td>


        </tr>
    }
</table>
@Model.Message
